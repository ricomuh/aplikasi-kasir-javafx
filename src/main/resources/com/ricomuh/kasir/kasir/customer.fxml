<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.ricomuh.kasir.kasir.CustomerController">
    <TableView fx:id="tableView" prefHeight="400.0" prefWidth="595.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="emailColumn" text="Email" />
        </columns>
    </TableView>
    <HBox>
        <Button onAction="#addCustomer" text="Add" />
        <Button onAction="#editCustomer" text="Edit" />
        <Button onAction="#deleteCustomer" text="Delete" />
        <Button onAction="#refreshCustomer" text="Refresh" />
    </HBox>
</VBox>
